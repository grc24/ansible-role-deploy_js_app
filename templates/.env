# Application
NODE_ENV=development
APP_NAME=E-Service Santé Bénin

# Serveur
PORT={{ item.app_port }}
HOST=0.0.0.0

# Base de données PostgreSQL
# Base de données PostgreSQL
DB_HOST={{ item.db_container }}_
DB_PORT={{ item.db_dynamc_port }}
DB_USER={{ item.db_user }}
DB_PASSWORD={{ item.db_password }}
DB_DATABASE={{ item.db_database }}
DB_SSL=false

# Pool de connexions
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis (optionnel)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_ACCESS_SECRET=your_super_secret_access_key_here_min_32_chars
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_min_32_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Bcrypt
BCRYPT_SALT_ROUNDS=12

# Email SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@e-service-sante.bj

# SMS / OTP
SMS_API_KEY=
SMS_SENDER=ESSANTE
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# Intégrations externes
XROAD_BASE_URL=https://api.xroad.gov.bj
XROAD_API_KEY=
ANIP_ENDPOINT=
TRESORPAY_API_KEY=
TRESORPAY_MERCHANT_ID=

# Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Sécurité
CORS_ORIGINS=http://localhost:3001,http://localhost:5173
SESSION_TIMEOUT=30
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME_MINUTES=30

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_
ENCRYPTION_IV=your_16_char_iv_

# Logs
LOG_LEVEL=debug
LOG_DIR=./logs
